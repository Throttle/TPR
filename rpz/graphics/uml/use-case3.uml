@startuml
left to right direction
skinparam packageStyle rect
actor Администратор
package "Система типа <<В>> (Анти-спам сервер) "{
  Администратор -- (аутенфикация и авторизация)
  Администратор -- (просмотр списка\nклиентов)
  (просмотр списка\nклиентов) <|-- (просмотр списка\nактивных клиентов)
  (просмотр списка\nклиентов) <|-- (просмотр списка неактивных/\nзаблокированных клиентов) 
  Администратор -- (изменение списка\nдопустимых клиентов)
  (изменение списка\nдопустимых клиентов) ..> (блокирование\nклиента) :<include>
  (изменение списка\nдопустимых клиентов) ..> (разблокировка\nклиента) : <include>
  Администратор -- (просмотр кэш списка\nспам-адресантов)
  Администратор -- (администрирование списка\nспам-адресантов)
  (администрирование списка\nспам-адресантов) .> (изменение степени\nдоверия данному адресанту) : <include>
  Администратор -- (просмотр списка\nвзаимодействующих\nанти-спам серверов)
  (просмотр списка\nвзаимодействующих\nанти-спам серверов) <|-- (просмотр списка\nактивных соседей)
  (просмотр списка\nвзаимодействующих\nанти-спам серверов) <|-- (просмотр списка неактивных/\nнедоступных соседей) 
  Администратор -- (просмотр статуса сообщений\nдля классификации)
  Администратор -- (отмена обработки\nсообщения)
  (отмена обработки\nсообщения) ..> (отправка клиенту) : <extend>
  (отмена обработки\nсообщения) ..> (удаление) : <extend>
  Администратор -- (просмотр журнала работы)
}
@enduml